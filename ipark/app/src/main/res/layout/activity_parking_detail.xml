<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.ParkingDetailActivity">
    <androidx.appcompat.widget.Toolbar
        android:background="@color/white"
        android:id="@+id/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/Image_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_keyboard_backspace_black_24dp">

            </ImageView>
            <TextView
                android:textSize="18sp"
                android:textColor="@color/Black"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:text="PARKING DETAILS"
                android:id="@+id/TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_below="@id/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/Relative"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <ImageView
        android:id="@+id/ImageView"
        android:layout_marginBottom="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/banner_detail"
        android:layout_width="match_parent"
        android:layout_height="200dp">

    </ImageView>
    <LinearLayout
        android:id="@+id/Linear_details"
        android:background="#80404040"
        android:layout_alignBottom="@id/ImageView"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aileron_heavy"
            android:padding="3dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="L-125-12329th street NW DC"
            android:textSize="18dp">
        </TextView>

        <TextView
            android:fontFamily="@font/aileron_heavy"
            android:text="close to museum"
            android:textSize="14sp"
            android:padding="3dp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/map"
                android:tint="@color/dark_blue"
                android:padding="3dp"
                android:layout_width="20dp"
                android:layout_height="20dp">

            </ImageView>
            <TextView
                android:textColor="@color/white"
                android:padding="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aileron_heavy"
                android:text="Location "
                android:textSize="14dp">
            </TextView>
        </LinearLayout>


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/Card_view"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@id/Linear_details"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="3dp">

        <LinearLayout
            android:layout_gravity="center"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:background="@color/dark_blue"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="Hourly/Daily"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:fontFamily="@font/aileron_regular"
                android:layout_width="match_parent"
                android:layout_height="40dp">

            </TextView>
            <TextView
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="Monthly"
                android:textSize="16sp"
                android:textColor="@color/blue"
                android:gravity="center"
                android:fontFamily="@font/aileron_regular"
                android:layout_width="match_parent"
                android:layout_height="40dp">

            </TextView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/Linear_date"
        android:background="@color/graycolor"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/Card_view"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:padding="5dp"
                android:layout_gravity="center"
                android:hint="23/04/2020 11:40 PM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp">

            </TextView>
            <View
            android:background="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="0.001dp">

        </View>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:padding="5dp"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:hint="23/04/2020 11:40 PM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <View
                android:background="@color/blue"
                android:layout_width="match_parent"
                android:layout_height="0.001dp">

            </View>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="Total"
                android:textSize="16sp"
                android:textColor="@color/text_color"
                android:gravity="center"
                android:fontFamily="@font/aileron_regular"
                android:layout_width="match_parent"
                android:layout_height="40dp">

            </TextView>

            <TextView
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="$7"
                android:textSize="16sp"
                android:textColor="@color/text_color"
                android:gravity="center"
                android:fontFamily="@font/aileron_regular"
                android:layout_width="match_parent"
                android:layout_height="40dp">

            </TextView>

        </LinearLayout>

    </LinearLayout>
            <Button
                android:layout_below="@id/Linear_date"
                android:id="@+id/But_continue"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_shape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Continue"
                android:textColor="@color/white"
                android:fontFamily="@font/aileron_bold">
            </Button>
            <TextView
                android:id="@+id/Text_vender"
                android:layout_below="@id/But_continue"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="Vendor"
                android:textSize="14sp"
                android:textColor="@color/blue"
                android:gravity="center"
                android:fontFamily="@font/aileron_regular"
                android:layout_width="match_parent"
                android:layout_height="40dp">

            </TextView>

            <LinearLayout
                android:id="@+id/Text_Linear"
                android:layout_below="@id/Text_vender"
                android:layout_marginTop="10dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="USTREET"
                    android:textSize="16sp"
                    android:textColor="@color/Black"
                    android:gravity="center"
                    android:fontFamily="@font/aileron_regular"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                </TextView>

                <TextView
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="202-032-2346"
                    android:textSize="16sp"
                    android:textColor="@color/Black"
                    android:gravity="center"
                    android:fontFamily="@font/aileron_regular"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                </TextView>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RecyclerList"
                android:background="@color/graycolor"
                android:layout_below="@id/Text_Linear"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>

        </RelativeLayout>

    </ScrollView>




    <FrameLayout
        android:layout_below="@id/Toolbar"
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

</RelativeLayout>

